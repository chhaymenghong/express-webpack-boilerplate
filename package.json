{
    "name": "express-webpack-starter-kit",
    "version": "1.0.0",
    "description": "Boilerplate for express project with webpack",
    "scripts": {
        "clean-dist": "rimraf ./dist && mkdir dist",
        "security-check": "nsp check",
        "lint": "esw ./build/webpack.config.* src --color",
        "lint:watch": "npm run lint -- --watch",
        "prod-server": "NODE_ENV=production node src/server/server.js",
        "dev-server": "NODE_ENV=development node src/server/server.js",
        "build": "node ./build/scripts/prodBuild",

        "dev": "npm-run-all --parallel dev-server security-check lint:watch",

        "preprod": "npm-run-all --parallel security-check lint clean-dist",
        "prod": "npm-run-all build prod-server",


        "deploy": "surge ./dist",
        "localtunnel": "lt --port 3000",
        "share": "npm-run-all --parallel open:src localtunnel",
        "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
        "test:watch": "npm run test -- --watch",

        "prestart": "babel-node buildScripts/startMessage.js",
        "start": "npm-run-all --parallel security-check open:src lint:watch test:watch start-mockapi",
        "open:src": "babel-node buildScripts/srcServer.js",
        "generate-mock-data": "babel-node buildScripts/generateMockData",
        "prestart-mockapi": "npm run generate-mock-data",
        "start-mockapi": "json-server --watch src/api/db.json --port 3001",
    },
    "author": "Menghong Chhay",
    "license": "MIT",
    "dependencies": {
        "whatwg-fetch": "2.0.3"
    },
    "devDependencies": {
        "babel-cli": "~6.26.0",
        "babel-core": "~6.26.0",
        "babel-loader": "~7.1.2",
        "babel-preset-env": "~1.6.1",
        "babel-preset-latest": "~6.24.1",
        "babel-register": "~6.26.0",
        "compression": "~1.7.1",
        "cross-env": "~5.1.3",
        "css-loader": "~0.28.9",
        "eslint": "~4.16.0",
        "eslint-plugin-import": "~2.8.0",
        "eslint-watch": "~3.1.3",
        "express": "~4.16.2",
        "extract-text-webpack-plugin": "~3.0.2",
        "html-webpack-plugin": "~2.30.1",
        "localtunnel": "~1.8.3",
        "npm-run-all": "~4.1.2",
        "nsp": "~3.1.0",
        "open": "~0.0.5",
        "rimraf": "~2.6.2",
        "style-loader": "~0.20.1",
        "webpack": "~3.10.0",
        "webpack-dev-middleware": "~2.0.4",
        "webpack-hot-middleware": "~2.21.0",
        "webpack-md5-hash": "~0.0.6",
        "webpack-merge": "~4.1.1",
        "surge": "0.19.0",
        "chai": "4.1.2",
        "chalk": "2.1.0",
        "cheerio": "1.0.0-rc.2",
        "jsdom": "9.11.0",
        "json-schema-faker": "0.4.0",
        "json-server": "0.12.0",
        "mocha": "4.0.1",
        "nock": "9.0.22",
        "numeral": "2.0.6"
    }
}
